@model testweb2.Models.StudentsModel
@{
    ViewBag.Title = "ChangeCat";
}

<h2>ChangeCat</h2>
<form action="/student/changecat" method="post">
    <div class="form-input">
        <div class="input-group mb-3 div-border">
            <div class="mb-3" style="width:100%;">
                학년 반
                <div class="mb-2">
                    <hr />
                    @foreach (var item in Model.category)
                    {
                        bool check = false;
                        foreach (var item2 in Model.userCategory)
                        {
                            if (item2.CatUSelect == item.CatId) { check = true; }
                        }
                        <div class="form-check form-check-inline">
                            @if (check)
                            {<input class="form-check-input" type="checkbox" name="Checkbox[]" checked="checked" value="@item.CatId"> }
                            else
                            { <input class="form-check-input" type="checkbox" name="Checkbox[]" value="@item.CatId">}
                            <label class="form-check-label" for="inlineCheckbox1">@item.CatName</label>
                        </div>
                    }
                    }
                </div>
            </div>
            <div class="mb-3" style="width:100%;">
                과목
                <div class="mb-2">
                    <hr />
                    @foreach (var item in Model.category)
                    {
                        if (string.Compare(item.CatAttribute, "과목") == 0)
                        {
                            bool check = false;
                            foreach (var item2 in Model.userCategory)
